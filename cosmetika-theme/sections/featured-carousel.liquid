{% comment %}
  ============================================================
  COSMETIKA — Featured Product Carousel
  ============================================================
  Matches Fractal Forest "Superfoods" and "Shop Kits" carousels.
  Shows 3 products at a time with horizontal scroll on mobile.
  Includes star ratings, review count, price, and quick add.
  ============================================================
{% endcomment %}

<section
  class="cosmetika-carousel"
  data-section-id="{{ section.id }}"
>
  <div class="cosmetika-carousel__container">

    {% if section.settings.heading != blank %}
      <div class="cosmetika-carousel__header" data-animate="fade-up">
        <div class="cosmetika-carousel__header-text">
          <h2 class="cosmetika-carousel__heading">{{ section.settings.heading }}</h2>
          {% if section.settings.subheading != blank %}
            <p class="cosmetika-carousel__subheading">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>

        <div class="cosmetika-carousel__nav-arrows">
          <button class="cosmetika-carousel__arrow cosmetika-carousel__arrow--prev" aria-label="Previous" data-carousel-prev>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
          </button>
          <button class="cosmetika-carousel__arrow cosmetika-carousel__arrow--next" aria-label="Next" data-carousel-next>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </button>
        </div>
      </div>
    {% endif %}

    {% assign collection = collections[section.settings.collection] %}
    {% assign limit = section.settings.products_to_show %}

    <div class="cosmetika-carousel__track" data-carousel-track>
      {% if collection != blank %}
        {% for product in collection.products limit: limit %}
          <div class="cosmetika-carousel__slide cosmetika-product-card" data-animate="fade-up" data-delay="{{ forloop.index | times: 0.12 }}">
            <a href="{{ product.url }}" class="cosmetika-product-card__link">
              <div class="cosmetika-product-card__media">
                {% if product.featured_image != blank %}
                  <img
                    class="cosmetika-product-card__image cosmetika-product-card__image--primary"
                    src="{{ product.featured_image | image_url: width: 500 }}"
                    srcset="
                      {{ product.featured_image | image_url: width: 300 }} 300w,
                      {{ product.featured_image | image_url: width: 500 }} 500w
                    "
                    sizes="(min-width: 1024px) 33vw, (min-width: 600px) 50vw, 85vw"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="{{ product.featured_image.width }}"
                    height="{{ product.featured_image.height }}"
                  >
                {% else %}
                  <div class="cosmetika-product-card__placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}

                {% if product.compare_at_price > product.price %}
                  <span class="cosmetika-product-card__badge cosmetika-product-card__badge--sale">Sale</span>
                {% endif %}
              </div>

              <div class="cosmetika-product-card__info">
                {% if section.settings.show_vendor %}
                  <p class="cosmetika-product-card__vendor">{{ product.vendor }}</p>
                {% endif %}

                <h3 class="cosmetika-product-card__title">{{ product.title }}</h3>

                {% comment %} Star rating placeholder — wire to Okendo/Judge.me/Shopify metafield {% endcomment %}
                {% if section.settings.show_reviews %}
                  <div class="cosmetika-product-card__rating">
                    <div class="cosmetika-stars" aria-label="5 out of 5 stars">
                      {% for i in (1..5) %}
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                        </svg>
                      {% endfor %}
                    </div>
                    <span class="cosmetika-product-card__review-count">({{ product.metafields.reviews.rating_count | default: '0' }})</span>
                  </div>
                {% endif %}

                <div class="cosmetika-product-card__price">
                  {% if product.compare_at_price > product.price %}
                    <span class="cosmetika-product-card__price--compare">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                  {% if product.price_varies %}
                    <span class="cosmetika-product-card__price--current">From {{ product.price_min | money }}</span>
                  {% else %}
                    <span class="cosmetika-product-card__price--current">{{ product.price | money }}</span>
                  {% endif %}
                </div>
              </div>
            </a>

            {% if section.settings.show_quick_add and product.available %}
              {% if product.variants.size == 1 %}
                <form method="post" action="/cart/add" class="cosmetika-product-card__quick-add">
                  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                  <button type="submit" class="cosmetika-product-card__quick-add-btn button button--primary">
                    Add to Bag
                  </button>
                </form>
              {% else %}
                <a href="{{ product.url }}" class="cosmetika-product-card__quick-add-btn button button--primary">
                  Choose Options
                </a>
              {% endif %}
            {% endif %}
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..3) %}
          <div class="cosmetika-carousel__slide cosmetika-product-card">
            <div class="cosmetika-product-card__media">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="cosmetika-product-card__info">
              <h3 class="cosmetika-product-card__title">Product Title</h3>
              <div class="cosmetika-product-card__price">
                <span class="cosmetika-product-card__price--current">$0.00</span>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Featured Carousel",
  "tag": "section",
  "class": "cosmetika-section cosmetika-section--carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trending Now"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to load",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Show star rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_quick_add",
      "label": "Show add-to-cart button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Carousel"
    }
  ]
}
{% endschema %}

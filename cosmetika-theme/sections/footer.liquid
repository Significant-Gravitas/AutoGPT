<footer class="cosmetika-footer" data-section-id="{{ section.id }}">
  <div class="cosmetika-footer__container">

    <div class="cosmetika-footer__grid">
      <!-- Brand column -->
      <div class="cosmetika-footer__brand">
        {% if section.settings.logo != blank %}
          <img
            src="{{ section.settings.logo | image_url: width: 200 }}"
            alt="{{ shop.name }}"
            class="cosmetika-footer__logo"
            loading="lazy"
          >
        {% else %}
          <span class="cosmetika-footer__logo-text">{{ shop.name }}</span>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="cosmetika-footer__description">{{ section.settings.description }}</p>
        {% endif %}

        <div class="cosmetika-footer__social">
          {% if section.settings.tiktok_url != blank %}
            <a href="{{ section.settings.tiktok_url }}" aria-label="TikTok" target="_blank" rel="noopener">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-2.88 2.5 2.89 2.89 0 0 1 0-5.78 2.92 2.92 0 0 1 .88.13v-3.5a6.37 6.37 0 0 0-.88-.07 6.26 6.26 0 0 0 0 12.51 6.27 6.27 0 0 0 6.27-6.27V9.05a8.16 8.16 0 0 0 3.83.95V6.69Z"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" aria-label="Instagram" target="_blank" rel="noopener">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Menu columns -->
      {% for block in section.blocks %}
        {% if block.type == 'menu' %}
          <div class="cosmetika-footer__menu-col" {{ block.shopify_attributes }}>
            {% if block.settings.heading != blank %}
              <h4 class="cosmetika-footer__menu-heading">{{ block.settings.heading }}</h4>
            {% endif %}
            {% if block.settings.menu != blank %}
              <ul class="cosmetika-footer__menu-list">
                {% for link in block.settings.menu.links %}
                  <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="cosmetika-footer__bottom">
      <p class="cosmetika-footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "section",
  "class": "cosmetika-section cosmetika-section--footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Brand Description",
      "default": "Curated luxury beauty for the modern woman."
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ]
}
{% endschema %}
